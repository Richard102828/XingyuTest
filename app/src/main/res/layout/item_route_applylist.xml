<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_route_apply_start"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="重庆邮电大学"
                android:textColor="#161616"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingEnd="10dp"
                android:layout_alignParentStart="true"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:layout_alignParentLeft="true" />

            <ImageView
                android:id="@+id/img_jiantou"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/img_item_route_applylist_jiantou"
                android:layout_toEndOf="@+id/tv_route_apply_start"
                android:layout_toRightOf="@+id/tv_route_apply_start" />

            <TextView
                android:id="@+id/tv_route_apply_end"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="较场口"
                android:textColor="#161616"
                android:gravity="center"
                android:textSize="19sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:layout_toEndOf="@+id/img_jiantou"
                tools:ignore="RtlSymmetry"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/img_jiantou" />
             <ImageView
                 android:id="@+id/img_route_apply_agree"
                 android:layout_width="45dp"
                 android:layout_height="45dp"
                 android:src="@drawable/img_item_route_applylist_agree"
                 android:layout_marginStart="10dp"
                 android:layout_alignParentEnd="true"
                 android:layout_marginLeft="10dp"
                 android:layout_alignParentRight="true" />

            <View
                android:id="@+id/v_line1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/tv_route_apply_start"/>

            <TextView
                android:id="@+id/tv_route_apply_data"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="2019/06/03"
                android:textColor="#101010"
                android:textSize="17sp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_below="@id/v_line1"
                tools:ignore="RtlSymmetry"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_route_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="07:30"
                android:textColor="#101010"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_toEndOf="@id/tv_route_apply_data"
                android:layout_below="@id/tv_route_apply_start"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/tv_route_apply_data"
                android:layout_marginLeft="15dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_route_apply_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_below="@id/tv_route_apply_data"
                tools:ignore="RtlSymmetry"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_route_apply_id"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Jodie Chan"
                android:textColor="#969696"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_below="@+id/tv_route_apply_data"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp" />

            <!--字体颜色已同意：#2E2E2E，待同意/未同意：#969696-->

            <TextView
                android:id="@+id/tv_route_apply_agree"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="已同意"
                android:textColor="#2E2E2E"
                android:gravity="center"
                android:layout_below="@+id/tv_route_apply_data"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>